@using Shared.Entities
@inject IJSRuntime Js
@inject NavigationManager _NavigationManager
@inject IDataflow Flow
@inject ToastService ToastService
@inject ProtectedSessionStorage SessionStorage


<div class="planner-page">
	<div class="planner-container">

		<div class="planner-header">
			<div>
				<h1 class="title">Workout Planner</h1>
				<p class="subtitle">Create and manage workout templates</p>
			</div>
			@if (!isCreating)
			{
				<button class="btn-primary-action" @onclick="ToggleCreate">
					<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 5v14M5 12h14" /></svg>
					New Template
				</button>
			}
		</div>

		@if (isCreating)
		{
			<div class="form-card">
				<div class="form-header">
					<h2>Create Template</h2>
				</div>
				<div class="form-body">
					<div class="form-row">
						<div class="form-group">
							<label>Name</label>
							<input type="text" @bind="newTemplate.Name" placeholder="e.g., Push Day" class="form-input" />
						</div>
						<div class="form-group">
							<label>Type</label>
							<select class="form-input" @bind="newTemplate.Type">
								<option value="Strength">Strength</option>
								<option value="Cardio">Cardio</option>
								<option value="Flexibility">Flexibility</option>
							</select>
						</div>
					</div>

					<div class="form-group">
						<label>Description</label>
						<textarea @bind="newTemplate.Description" placeholder="Optional description..." class="form-input text-area"></textarea>
					</div>

					<div class="form-group">
						<label>Exercises</label>
						<select class="form-input" @onchange="AddExercise">
							<option value="">Add exercise...</option>
							@foreach (var ex in AvailableExercises)
							{
								<option value="@ex.Id">@ex.Name</option>
							}
						</select>

					</div>

					@if (selectedExercises.Any())
					{
						<div class="selected-exercises">
							@foreach (var ex in selectedExercises)
							{
								<span class="ex-tag">
									@ex.Name
									<button @onclick="() => RemoveExercise(ex.Id)">×</button>
								</span>
							}
						</div>
					}


					<div class="form-actions">
						<button class="btn-primary-action" @onclick="SaveTemplate">
							<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M15.2 3a2 2 0 0 1 1.4.6l3.8 3.8a2 2 0 0 1 .6 1.4V19a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2z" /><path d="M17 21v-7a1 1 0 0 0-1-1H8a1 1 0 0 0-1 1v7" /><path d="M7 3v4a1 1 0 0 0 1 1h7" /></svg>
							Save Template
						</button>
						<button class="btn-outline" @onclick="ToggleCreate">Cancel</button>
					</div>
				</div>
			</div>
		}

		<div class="templates-list">
			@foreach (var template in savedTemplates)
			{
				<div class="template-item">
					<div class="item-info">
						<h3>@template.Name</h3>
						<p>@template.Type.ToLower() • @template.ExerciseCount exercises</p>
					</div>
					<button class="btn-delete" @onclick="() => DeleteTemplate(template)">
						<svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M3 6h18M19 6v14c0 1-1 2-2 2H7c-1 0-2-1-2-2V6M8 6V4c0-1 1-2 2-2h4c1 0 2 1 2 2v2M10 11v6M14 11v6" /></svg>
					</button>
				</div>
			}
		</div>
	</div>
</div>
